{
    "version": 2,
    "name": "Podcast Backend",
    "builds": [
      { 
        "src": "/src/app.js", 
        "use": "@vercel/node",
        "config": {
          "maxDuration": 30,
          "memory": 3009
        }
      }
    ],
    "routes": [
      { "src": "/(.*)", "dest": "/src/app.js" }
    ]
  }
