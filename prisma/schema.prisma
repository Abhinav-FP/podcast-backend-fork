generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}

model Files {
  id    Int    @id @default(autoincrement())
  uuid  String @unique // You will generate this manually using uuidv4
  name  String
  size  Int?   // Optional (nullable in DB)
  link  String? // Optional (nullable in DB)
}