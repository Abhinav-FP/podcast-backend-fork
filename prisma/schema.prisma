generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}

model Podcast {
  id             Int      @id @default(autoincrement())
  uuid           String   @unique // You will generate this manually using uuidv4
  thumbnail      String
  name           String
  description    String
  createdAt      DateTime @default(now()) // Use timestamp for creation time
  Author         String?              // Optional
  Cast           String[]             // Array of strings
  files          Files[] // ‚Üê Virtual relation; Prisma resolves this using Files.podcastId
}

model Files {
  id           Int    @id @default(autoincrement())
  uuid         String @unique
  title        String
  description  String
  duration     Int
  link         String? // Optional (nullable in DB)
  thumbnail    String
  size         Int?   // Optional (nullable in DB)
  createdAt    DateTime @default(now()) // Use timestamp for creation time
  podcastId    Int
  podcast      Podcast  @relation(fields: [podcastId], references: [id])
}


model subscriber {
  id             Int      @id @default(autoincrement())
  email           String @unique   
}

model contact {
  id             Int      @id @default(autoincrement())
  email           String @unique   
  name            String
  message         String
}