generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}

model Podcast {
  id             Int      @id @default(autoincrement())
  uuid           String   @unique // You will generate this manually using uuidv4
  thumbnail      String
  name           String   @unique
  email          String
  langauage      String[]
  description    String
  createdAt      DateTime @default(now()) // Use timestamp for creation time
  author         String   @default("The Property Portfolio Podcast")  // Optional
  isDeleted      Boolean    @default(false)
  cast           String[]             // Array of strings
  episodes       Episode[] // ‚Üê Virtual relation; Prisma resolves this using Files.podcastId
}

model Episode {
  id              Int @id @default(autoincrement())
  uuid            String @unique
  title           String
  description     String
  duration        Int
  durationInSec   Int
  link            String? // Optional (nullable in DB)
  thumbnail       String
  mimefield       String
  isDeleted       Boolean    @default(false)
  size            Int?   // Optional (nullable in DB)
  createdAt       DateTime @default(now()) // Use timestamp for creation time
  podcastId       Int
  podcast         Podcast @relation(fields: [podcastId], references: [id])
}

model subscriber {
  id             Int      @id @default(autoincrement())
  email           String @unique   
}

model contact {
  id             Int      @id @default(autoincrement())
  email           String @unique   
  name            String
  message         String
}