generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}

model Podcast {
  id             Int      @id @default(autoincrement())
  uuid           String   @unique // You will generate this manually using uuidv4
  thumbnail      String
  name           String   @unique
  email          String
  language      String[]
  description    String
  createdAt      DateTime @default(now()) // Use timestamp for creation time
  author         String   @default("The Property Portfolio Podcast")  // Optional
  isDeleted      Boolean    @default(false)
  cast           String[]             // Array of strings
  episodes       Episode[] // ‚Üê Virtual relation; Prisma resolves this using Files.podcastId
}

model Episode {
  id              Int @id @default(autoincrement())
  uuid            String @unique
  title           String
  description     String
  duration        Int
  durationInSec   Int
  link            String? // Optional (nullable in DB)
  thumbnail       String
  mimefield       String
  isDeleted       Boolean    @default(false)
  size            Int?   // Optional (nullable in DB)
  createdAt       DateTime @default(now()) // Use timestamp for creation time
  podcastId       Int
  podcast         Podcast @relation(fields: [podcastId], references: [id])
  detail          String?
}

model Guide {
  id              Int @id @default(autoincrement())
  uuid            String  @unique
  title           String
  description     String
  author          String  @default("The Property Portfolio Podcast")  // Optional
  link            String
  language        String[] 
  thumbnail       String
  isDeleted       Boolean @default(false)
  pages           Int?   
  downloads       Int     @default(0)
}

model subscriber {
  id             Int    @id @default(autoincrement())
  email          String @unique   
}

model contact {
  id             Int    @id @default(autoincrement())
  email          String @unique   
  name           String
  subject        String? 
  message        String
}